# Copy this file to .env and fill in the credentials
DISCORD_TOKEN=your-bot-token
DISCORD_CLIENT_ID=your-application-id
DISCORD_GUILD_ID=optional-development-guild
LOG_LEVEL=info

# Database connection for persistent state
DATABASE_URL=mongodb://localhost:27017/utu

# Counting utility settings (preferred)
# Format: channelId|webhookUrl|optionalStartingGoal;anotherChannel|anotherWebhook
COUNTING_CHANNELS=channel-id|https://discord.com/api/webhooks/...|500

# Legacy fallback (used when COUNTING_CHANNELS is empty)
COUNTING_CHANNEL_ID=channel-id-for-counting
COUNTING_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Optional health endpoint for hosts like Replit
ENABLE_HEALTH_SERVER=false
HEALTH_SERVER_PORT=3000
HEALTH_SERVER_HOST=0.0.0.0
